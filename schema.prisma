generator client {
    provider             = "prisma-client-py"
    recursive_type_depth = "5"
    interface            = "asyncio"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model RedeemCode {
    id     Int        @id @default(autoincrement())
    code   String
    status CodeStatus
    game   Game

    @@unique([code, game])
}

enum CodeStatus {
    OK
    // Invalid, expired, etc.
    NOT_OK
}

enum Game {
    /// Genshin Impact
    genshin
    /// Honkai Star Rail
    hkrpg
    /// Honkai Impact 3rd
    honkai3rd
    /// Zenless Zone Zero
    nap
    /// Tears of Themis
    tot
}
